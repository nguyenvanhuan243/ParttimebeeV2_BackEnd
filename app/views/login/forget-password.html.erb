<div class='special-main'>  
      <div class="auto-container">
        <div class="special-content">
            <div>
                <% if flash[:send_password_reset_success] %>
                        <div class="alert alert-success">
                            <center>
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <%= flash[:send_password_reset_success] %>
                            </center>
                        </div>
                <% end %>
                <% if flash[:send_password_reset_fail] %>
                        <div class="alert alert-danger">
                            <center>
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <%= flash[:send_password_reset_fail] %>
                            </center>
                        </div>
                <% end %>
            </div>
          <div class="login-form-content special-form-content">
            <%= form_for(:reset, :url => {:controller => 'login', :action => 'send_mail_reset_password_user'}) do |f| %>
              <div class="form-group">
                <label for="user-email">Email</label>
                 <%= f.email_field :email, :class=>"form-control", :required => true %> 
              </div>
              <button type="submit" class="btn btn-default login-btn">Reset Password</button>
            <% end %>
            <div class="or-seperate"><span>Or</span></div>
            <div class="facebook-login">
            <a href='/auth/facebook' class="facebook-login-btn btn btn-lg"><i class="fa fa-facebook-official" aria-hidden="true"></i><span>Sign up with Facebook</span></a>
            <p>Weâ€™ll never post anything on Facebook without your permission.</p>
            </div>
          </div>  
          <div class="new-sign-up text-center">
            <p>New to Part-time Bee? <a href="/register" title="Sign up" class="sign-up-btn-link">Log in</a></p>
          </div>
        </div>
      </div>
    </div> 
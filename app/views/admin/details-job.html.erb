        <div class="container">
            <% @user = Job.find(params[:id])%>
            <div class="row">
                <div class="col-sm-12">
                    <div class="bg-picture card-box">
                        <div class="row">
                            <div class="col-lg-8">
                                <form class="form-horizontal card-box" role="form"> 
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">User ID:</label>
                                        <div class="col-md-10">
                                            <input type="number" id="userid" placeholder="Enter user_id which you want to merge" class="form-control" >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" class="hidden" id="jobid" placeholder="Enter user_id which you want to merge" value=<%= params[:id]%> class="form-control" >
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button  class="btn btn-primary">
                                            Merge Job Now
                                        </button>

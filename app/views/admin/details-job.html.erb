<script type="text/javascript">
    $(document).ready(function() {
        $('form').submit(function(event) {
            $.ajax({
                type: 'get',
                url:'/admin/merge_the_job' 
                + '?user_id=' + $("#userid").val()
                + '&job_id=' + $("#jobid").val(),
                dataType:'html',
                processData:false
            });
            event.preventDefault();
            window.alert("You just have merged job for new employer!");
            window.history.back();
        });
    });
</script>

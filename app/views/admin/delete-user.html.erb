<div class="content-page">
	<div class="content">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
				<div class="card-box">
					<div class="table-rep-plugin">
					<div class="table-responsive" data-pattern="priority-columns">
						<table id="tech-companies-1" class="table  table-striped">   
							<thead>                              
								<tr>
									<th>ID</th>
									<th data-priority="3">Email</th>
									<th data-priority="1">Phone Number</th>
									<th data-priority="3">Email Confirmation</th>
									<th data-priority="3">Block</th>
									<th data-priority="6">Address</th>
									<th data-priority="6">Birthday</th>
									<th data-priority="6">Created day</th>
									<th data-priority="6">Action</th>
								</tr>
							</thead>
							<tbody>
								<% users = User.where(email_confirmed: 1).paginate(:per_page => 10, :page => params[:page]) %>
								<% users.each do |user| %> 
									<tr>
										<td>
											<%= user.id %>
										</td>
										<td>
											<%= user.email %>
										</td>
										<td>
											<%= user.phone_number %>
										</td>
										<td>
											<%= user.email_confirmed %>
										</td>
										<td>
											<%= user.blocked == 1 ? 'Blocked' : 'Opening' %>
										</td>
										<td>
											<%= user.address %>
										</td>
										<td>
											<%= user.day_of_birth %>
										</td>
										<td>
											<%= user.created_at.strftime("%d-%m-%Y %I:%M%p") %>
										</td>
										<td> 
											<%= link_to "Delete", {
												:controller => "admin",
												:action => "delete_user",
												:id => user.id },
												:class => "btn btn-danger waves-effect w-md waves-light m-b-5",
												:onclick => "return confirm('Do you want to delete this user?')"
											%>
										</td>
									</tr> 
								<% end %>
							</tbody>
						</table>
						<p><%= will_paginate users %></p>
					</div>
					</div>
				</div>
				</div>
			</div>
		</div> <!-- container -->
	</div> <!-- content -->
	<footer class="footer">2017 Â© Parttimebee.</footer>          
</div>
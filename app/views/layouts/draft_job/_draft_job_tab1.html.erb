                                        </select>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label>City</label>
                                        <select id="city2" name="city" class="nice-select removeclass2">
                                          <option class="nice-select">Select City</option>
                                        </select>
                                    </div>

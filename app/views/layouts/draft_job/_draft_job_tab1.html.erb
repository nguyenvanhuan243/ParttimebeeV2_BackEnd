                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">        
                                <div class="step">
                                    <h3>Step 3 : Working Time</h3>
                                </div>
                            </div>
                            <div class="save-exit">
                                <button class='waves-effect' onclick="get_current_tab_active()" name="save", value="SaveExit">Save & Exit</button>
                            </div>
                              
                        </div><!-- row --> 
                    </div>
                </div><!-- header-small -->
                <div class="rectangle">
                    <span style="width: 50%;"></span>
                </div><!-- .rectangle -->
                <div class="content">
                    <div class="form-container">
                            <div class="form-group working-date">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label>Working Date from</label>
                                         <%= f.text_field :working_date_from, :value => @job[:working_date_from].try(:strftime, "%m %d %Y at %I:%M%p") , :class=>"form-control", :placeholder =>"Select Date", :id =>'datetimepicker4' %> 
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label>to</label>
                                        <%= f.text_field :working_date_to, :class=>"form-control", :placeholder =>"Select Date", :value => @job[:working_date_to].try(:strftime, "%m %d %Y at %I:%M%p"), :id=>'datetimepicker5' %> 
                                    </div>
                                </div>
                            </div><!-- .form-group -->
                            <div class="form-group working-hour">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                                        <label>Working Hour from</label>

                                       <%= select_tag :working_hour_from, options_for_select(Workinghour.all.collect{ |hour| [hour.working_hour, hour.working_hour] }, :selected => @job[:working_hour_from], :class => "form-control")%>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label>to</label>
                                            <%= select_tag :working_hour_to, options_for_select(Workinghour.all.collect{ |hour| [hour.working_hour, hour.working_hour] },:selected => @job[:working_hour_to] ,:class => "form-control")%>
                                    </div>

                                </div>

                            </div><!-- .form-group -->

                            <div class="rectangle-6"></div>

                            <div class="submit">

                                <a class="btn btn-primary btnPrevious">Back</a>

                                <a class="btn btn-primary btnNext waves-effect">Next</a>

                            </div>
                    </div><!-- .auto-container -->

                </div><!-- .content -->

            </div><!-- .tab-3 -->


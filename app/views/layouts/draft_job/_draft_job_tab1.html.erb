                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label></label>
                                             <%= select_tag(:perday, 
                                            options_for_select([['per day', 'day'], ['per week', 'week'], ['per month', 'month']],:selected => @job[:per_day]), :class=>"form-control" ) %>
                                    </div>
                                </div>
                            </div><!-- .form-group -->

                            <div class="form-group">

                                <div class="row">

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label>Payment</label>
                                             <%= select_tag(:payment, 
                                            options_for_select([['pay daily', 'daily'], 
                                                                ['pay weekly', 'weekly'], 
                                                                ['pay monthly', 'monthly']
                                                                ], :selected => @job[:payment]), :class=>"form-control" ) %>
                                        <div class="div-radio">
                                            <label>On The Spot</label>
                                            <% if @job[:on_the_spot] == "yes"%>
                                            <label class="radio-inline">
                                                <input type="radio" name="onthespot" id="on-the-spot1" value="onthespot1" checked><span></span> Yes
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="onthespot" id="on-the-spot2" value="onthespot2" ><span></span> No
                                            </label>
                                            <% else %>
                                            <label class="radio-inline">
                                                <input type="radio" name="onthespot" id="on-the-spot1" value="onthespot1"><span></span> Yes
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="onthespot" id="on-the-spot2" value="onthespot2" checked ><span></span> No
                                            </label>
                                            <% end %>
                                        </div>
                                        <div class="div-radio">
                                            <label>Commission</label>
                                            <% if @job[:commission] == "yes"%>
                                                <label class="radio-inline">
                                                    <input type="radio" name="commission" id="commissio1" value="commission1" checked><span></span> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="commission" id="commissio2" value="commission2" ><span></span> No
                                                </label>
                                            <% else %>
                                                <label class="radio-inline">
                                                    <input type="radio" name="commission" id="commissio1" value="commission1"><span></span> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="commission" id="commissio2" value="commission2" checked ><span></span> No
                                                </label>
                                            <% end %>
                                       </div>
                                    </div>
                                </div>
                            </div><!-- .form-group -->
                            <div class="form-group">
                                <label>Benefits</label>
                                <%= f.text_area :benefits, :class=>"editable", :rows => 5, :placeholder =>"Lunch Included, Accomodation and Transport Provided", :value => @job[:benefits]  %>
                            </div><!-- .form-group -->
                            <div class="rectangle-6"></div>
                            <div class="submit">
                                <a class="btn btn-primary btnPrevious">Back</a>
                                <a class="btn btn-primary btnNext waves-effect">Next</a>
                            </div>
                       </form>              
                    </div><!-- .auto-container -->
                </div><!-- .content -->
            </div><!-- .tab-2 -->
            <div class="tab-pane" id="tab3">
                <div class="header">
                    <div class="auto-container">
                        <div class="row"> 
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">            
                                <a class="logo" href="#" title="Logo">

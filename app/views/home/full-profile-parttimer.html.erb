<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>worker profile(full)</title>
	<!-- Stylesheets -->
	<%= stylesheet_link_tag 'home/bootstrap.min' %>
	<%= stylesheet_link_tag 'home/jquery.fancybox' %>
	<%= stylesheet_link_tag 'home/style' %>
	<%= stylesheet_link_tag 'home/flexslider' %>
	<%= stylesheet_link_tag 'home/responsive' %>
	<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
	<link rel="icon" href="images/favicon.ico" type="image/x-icon">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
	<link href="https://fonts.googleapis.com/css?family=Lato:300i,400,900|Montserrat:400,700" rel="stylesheet">

</head>
<body class="employer-profile">
	<div class="wapper">
		<%= render "layouts/header"%>
        <% @parttimer = User.find(params[:id])%>
        <div class="search-result">
			<div class="employer-profile-container employer-profile-banner">
				<div class="image-left">
					<a class="fancybox" href="#inline1">
					   <%= image_tag "popup-image.png", alt: "popup image"%>
          </a>
				</div>	
        <div class="info-right">
					<h1><%= @parttimer.full_name%></h1>
          <span>Member since 
            <%=@parttimer[:created_at].strftime("%d %B %Y")%>
          </span>
          <p><%= @parttimer.introduce_yourself%></p>
				</div><!-- .employer-profile-banner -->
			</div><!-- .employer-profile-container -->
		</div><!-- .search-result -->
        <div class="content">
             <% @completed_job = Applied.where(status_job: "completed", parttimer_id: params[:id]).all%>
            <div class="my-jobs-container">
                <h2>Completed Jobs</h2>
                <div class="employer-profile-listing">
                    <ul class="employer-profile-cat">
                        <li class="job-title">Job title</li>
                        <li class="location">Location</li>
                        <li class="working-period">Working Period</li>
                    </ul>
                    <% @completed_job.paginate(:per_page => 10, :page => params[:page]).all.each do |completedjob|%>
                    <% job = Job.where(id: completedjob[:job_id]).first%>
                        <ul>
                            <li class="job-title">
                                <%= job.title%>
                            </li>
                            <li class="location">
                                <%= job.state%>
                            </li>
                            <li class="working-period">
                                <%= job[:working_date_from].to_date.strftime("%d %B")%> - 
                                <%= job[:working_date_to].to_date.strftime("%d %B")%>
                            </li>
                        </ul>
                    <% end %>
                </div><!-- .employer-profile-listing -->
                <div class="page-nav">
    				<nav aria-label="Page navigation">
    				  	<ul class="pagination pagination-lg">
                                <li class="sub-page-nav">
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <% for i in 0..@completed_job.count/10  %>
                                    <li><a href="?page=<%=i+1%>"><%=i+1%></a></li>
                                <% end %>
                                <li class="sub-page-nav">
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>       
    				</nav>
    			</div><!-- page-nav -->

            </div><!-- .employer-profile-container -->

        </div><!-- .content -->
        <%= render "layouts/footer"%>
	</div><!-- wapper -->
</div>
<%= javascript_include_tag "home/jquery" %>
<%= javascript_include_tag "home/bootstrap.min" %>
<%= javascript_include_tag "home/jquery.flexslider" %>
<%= javascript_include_tag "home/jquery.fancybox" %>
<%= javascript_include_tag "home/wave" %>
<%= javascript_include_tag "home/parttimebee-custom" %>
</body>
</html>